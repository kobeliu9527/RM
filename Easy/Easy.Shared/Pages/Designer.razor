@page "/designer"
@layout BlankLayout
@inject NavigationManager Navigation
<div class="d-flex flex-column h-100 w-100">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="btn-group">
            <button type="button" class="btn btn-primary" @onclick="()=>{ShowToolBox=!ShowToolBox;}">工具栏</button>
            <button type="button" class="btn btn-primary active" @onclick="()=>{ShowPropertyBox=!ShowPropertyBox;}">属性栏</button>
        </div>
    </div>
    <div class="d-flex flex-row h-100 w-100">

            @if (!ShowToolBox)
            {
                <div class="d-flex flex-column" style="min-width:15%">
                    <LeftPanel>

                    </LeftPanel>
                </div>
            }

            <div class="d-flex flex-column flex-grow-1 container-space fd-scrollbar">
                <MainPanel>

                </MainPanel>
            </div>
            @if (!ShowPropertyBox)
            {
            <div class="d-flex flex-column" style="min-width:15%">
                    <RightPanel>

                    </RightPanel>
                </div>
            }
        </div>




</div>

@code {
    public bool ShowToolBox { get; set; }
    public bool ShowPropertyBox { get; set; }
}
