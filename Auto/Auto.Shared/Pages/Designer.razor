                                    <FirstPaneTemplate>
                                        <div class="d-flex justify-content-center align-items-center h-100">
                                            <PalettePanel></PalettePanel>
                                        </div>
                                    </FirstPaneTemplate>
                                    <SecondPaneTemplate>
                                        <div class="d-flex justify-content-center align-items-center h-100">中间面板</div>
                                    </SecondPaneTemplate>
                                </Split>
                            </FirstPaneTemplate>
                            <SecondPaneTemplate>
                                <div class="d-flex justify-content-center align-items-center h-100">
                                    <FieldPropertiesPanel />
                                </div>
                            </SecondPaneTemplate>
                        </Split>
                    </div>
                </div>
            </div>
        </CascadingValue>
    </NotAuthorized>
